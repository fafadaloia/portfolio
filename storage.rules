rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permitir lectura pública de todas las imágenes
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Permitir escritura solo a usuarios autenticados
    // En producción, deberías verificar que el usuario sea admin
    match /admin/testimonies/{fileName} {
      allow write: if request.auth != null;
    }
    
    match /admin/proyects/{fileName} {
      allow write: if request.auth != null;
    }
  }
}